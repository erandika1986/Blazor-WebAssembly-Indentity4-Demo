@if (ProductCategories.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col" style="width:250px !important;">Id</th>
                <th scope="col" style="width:100% !important;">Name</th>
                <th scope="col" style="width:350px !important;">View Products</th>
                <th scope="col" style="width:150px !important;">Update</th>
                <th scope="col" style="width:150px !important;">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productCategory in ProductCategories)
            {
                <tr>
                    <td class="align-middle">
                        @productCategory.Id
                    </td>
                    <td class="align-middle">
                        @productCategory.Name
                    </td>
                    <td class="align-middle">
                        <RadzenButton Variant="Variant.Flat" Shade="Shade.Dark" Text="View Products" ButtonStyle="ButtonStyle.Primary" />
                    </td>
                    <td class="align-middle">
                        <RadzenButton Variant="Variant.Flat" Shade="Shade.Dark" Click=@(args => RedirectToUpdate(productCategory.Id.ToString())) Text="Update" ButtonStyle="ButtonStyle.Primary" />
                    </td>
                    <td class="align-middle">
                        <RadzenButton Variant="Variant.Flat" Shade="Shade.Dark" Click=@(args => Delete(productCategory.Id)) Text="Delete" ButtonStyle="ButtonStyle.Danger" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading products...
    </span>
}




