@if (Products.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col" style="width:30% !important;">Name</th>
                <th scope="col" style="width:70% !important;">Description</th>
                <th scope="col" style="width:200px !important;">Update</th>
                <th scope="col" style="width:200px !important;">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Products)
            {
                <tr>
                    <td>
                        <img src="@product.ImageUrl" alt="User image" style="width:50px;height:50px" />
                    </td>
                    <td class="align-middle">
                        @product.Name
                    </td>
                    <td class="align-middle">
                        @product.Description
                    </td>
                    <td class="align-middle">
                        <RadzenButton Variant="Variant.Flat" Shade="Shade.Dark" Click=@(args => RedirectToUpdate(product.Id)) Text="Update" ButtonStyle="ButtonStyle.Primary" />
                    </td>
                    <td class="align-middle">
                        <RadzenButton Variant="Variant.Flat" Shade="Shade.Dark" Click=@(args => Delete(product.Id)) Text="Delete" ButtonStyle="ButtonStyle.Danger" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading products...
    </span>
}

