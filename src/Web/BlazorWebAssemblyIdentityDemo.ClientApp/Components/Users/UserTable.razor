@if (Users.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Position</th>
                <th scope="col">Roles</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Users)
            {
                <tr>
                    <td>
                        <img src="@user.ImageUrl" alt="User image" style="width:50px;height:50px" />
                    </td>
                    <td class="align-middle">
                        @user.FirstName
                    </td>
                    <td class="align-middle">
                        @user.LastName
                    </td>
                    <td class="align-middle">
                        @user.Email
                    </td>
                    <td class="align-middle">
                        @user.Position
                    </td>
                    <td class="align-middle">
                        @user.Roles
                    </td>
                    <td class="align-middle">
                        <RadzenButton Variant="Variant.Flat" Shade="Shade.Dark" Click=@(args => RedirectToUpdate(user.Id)) Text="Update" ButtonStyle="ButtonStyle.Primary" />
                    </td>
                    <td class="align-middle">
                        <RadzenButton Variant="Variant.Flat" Shade="Shade.Dark" Click=@(args => Delete(user.Id)) Text="Delete" ButtonStyle="ButtonStyle.Danger" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading products...
    </span>
}

